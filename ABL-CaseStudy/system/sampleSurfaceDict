FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampleSurfaceDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationScheme cellPoint;

surfaceFormat   raw;

surfaces
(
    constantPlane
    {
        name waterSurface;
        basePoint ( 0.5 3.465 0.5 );
        normalVector ( 0 1 0 );
    }
);

fields          ( T );


